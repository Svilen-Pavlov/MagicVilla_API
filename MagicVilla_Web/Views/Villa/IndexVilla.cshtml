@using MagicVilla_Web.Models.DTO;
@model PaginatedListDTO<VillaDTO>
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary" class="bi bi-plus-square-fill">  Create New Villa </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>



    <div class="text-center" align="center">
        @if (Model.HasPreviousPage)
        {
            <a asp-action="IndexVilla" asp-controller="Villa" asp-route-pageNumber="@(Model.PageNumber-1)" class="btn btn-default">
                Previous Page
            </a>
        }
        @if (Model.HasNextPage)
        {
            <a asp-action="IndexVilla" asp-controller="Villa" asp-route-pageNumber="@(Model.PageNumber+1)" class="btn btn-default">
                Next Page
            </a>
        }

        Number of entries to display:
        <div>
            <form asp-action="IndexVilla" asp-controller="Villa">
                <select name="pageSize" asp-for="@Model.PageSize" onchange="javascript:this.form.submit()">
                    <option disabled>please choose a number</option>
                    <option value=5>5</option>
                    <option value=10>10</option>
                    <option value=20>20</option>
                    <option value=50>50</option>
                </select>
            </form>
        </div>
    </div>

</div>